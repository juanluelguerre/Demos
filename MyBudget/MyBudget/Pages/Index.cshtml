@page
@model IndexModel
@{
	ViewData["Title"] = "My Budget";
}

	<div class="d-flex justify-content-center">
		<div class="card text-white bg-dark mb-3" style="width: 30rem;">
			<h5 class="card-header">Budget</h5>
			<div class="card-body">				
				<p class="card-text">
					This is the current buget. What do you want to do?
				</p>
				<form method="post">
					<div class="form-group">
						<input type="text" class="form-control" name="Total" value="@Model.Total" />
					</div>

					<div class="form-group">
						<button type="submit" class="btn btn-success btn-lg" asp-page-handler="Add">Add</button>
						<button type="submit" class="btn btn-warning btn-lg" asp-page-handler="Remove">Remove</button>
					</div>
				</form>
			</div>
		</div>
		</div>
